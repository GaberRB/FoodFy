{% extends "layout.njk" %}

{% block content %}
 
    <div class="contents index">
       <form class="filter" action="/chefs" method="GET">
               <img src="/assets/chef-gorilla.png" style="width: 36px" alt="">
                <input class="filter"
                    type="text"
                    name="filter"
                    placeholder="Chef"
                    value="{{filter}}"
                    >
                <button class=""type="submit">Filtrar</button>
        </form>
        
       <section class="box-cards">
          
        {% for chef in chefs %}

            <div class="box-card">
                <div class="box-card-img">
                    <img src="{{chef.avatar_url}}" alt="Imagem do {{item.name}}">
                </div>
                <div class="box-name">
               
                    <p><img src="/assets/chef-1.png" alt="">  {{chef.name}}</p>
                    
              
                    
                </div>
                
                <input id="idChef" type="hidden" value={{chef.id}} >
            </div>
        {% endfor %}

    
     
    </section>
    <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
    </div>
     <script src="/scripts/script.js"></script>
{% endblock%}
